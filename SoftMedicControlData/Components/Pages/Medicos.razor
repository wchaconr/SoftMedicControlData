@page "/medicos"
@rendermode InteractiveServer

<PageTitle>Gestión de Médicos</PageTitle>

<style>

    :root {
        --azul-suave: #6C8EBF;
        --verde-agua: #7FCDCD;
        --gris-claro: #F0F4F8;
    }

    .container {
        padding: 30px;
        max-width: 1200px;
        margin: auto;
    }

    h2 {
        color: var(--azul-suave);
        margin-bottom: 20px;
    }

    .section {
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        padding: 20px;
        margin-bottom: 30px;
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            font-weight: bold;
            display: block;
            margin-bottom: 6px;
        }

        .form-group input, .form-group select {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 8px;
            background-color: var(--gris-claro);
        }

    .btn {
        background-color: var(--verde-agua);
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-weight: bold;
    }

        .btn:hover {
            background-color: #66baba;
        }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
    }

    table, th, td {
        border: 1px solid #ddd;
    }

    th, td {
        padding: 10px;
        text-align: left;
    }

    th {
        background-color: var(--azul-suave);
        color: white;
    }

    .input-time {
        padding: 8px;
        border-radius: 6px;
        border: 1px solid #ccc;
        background-color: #F0F4F8;
    }

</style>

<div class="header">
    <img src="/images/logo-softmedic.png" alt="Logo SoftMedic" />
    <h1>Médicos</h1>
</div>

<div class="container">

    <!-- Registro / Edición -->
    <div class="section">
        <h3>Registro de Médico</h3>
        <EditForm Model="@medico" OnValidSubmit="GuardarMedico" FormName="formMedico">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="form-group">
                <label>Nombre completo</label>
                <InputText @bind-Value="medico.Nombre" />
            </div>
            <div class="form-group">
                <label>Especialidad</label>
                <InputText @bind-Value="medico.Especialidad" />
            </div>
            <div class="form-group">
                <label>Email</label>
                <InputText @bind-Value="medico.Email" type="email" />
            </div>
            <div class="form-group">
                <label>Teléfono</label>
                <InputText @bind-Value="medico.Telefono" />
            </div>
            <button type="submit" class="btn">Guardar Médico</button>
        </EditForm>
    </div>

    <!-- Lista de Citas -->
    <div class="section">
        <h3>Citas Agendadas</h3>
        <select @bind="medicoSeleccionado" class="form-group">
            <option disabled selected>Seleccione un médico</option>
            @foreach (var m in medicos)
            {
                <option value="@m.Nombre">@m.Nombre</option>
            }
        </select>

        @if (!string.IsNullOrEmpty(medicoSeleccionado))
        {
            <table>
                <thead>
                    <tr>
                        <th>Paciente</th>
                        <th>Fecha</th>
                        <th>Hora</th>
                        <th>Motivo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in citas.Where(c => c.Medico == medicoSeleccionado))
                    {
                        <tr>
                            <td>@c.Paciente</td>
                            <td>@c.Fecha.ToShortDateString()</td>
                            <td>@c.Hora.ToString(@"hh\:mm")</td>
                            <td>@c.Motivo</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

    <!-- Horarios Disponibles -->
    <div class="section">
        <h3>Horarios Disponibles</h3>
        <div class="form-group">
            <label>Día</label>
            <select @bind="nuevoHorario.Dia">
                <option>Lunes</option>
                <option>Martes</option>
                <option>Miércoles</option>
                <option>Jueves</option>
                <option>Viernes</option>
            </select>
        </div>
        <div class="form-group">
            <label>Hora de inicio</label>
            <InputTime @bind-Value="nuevoHorario.Inicio" />
        </div>
        <div class="form-group">
            <label>Hora de fin</label>
            <InputTime @bind-Value="nuevoHorario.Fin" />
        </div>
        <button class="btn" @onclick="AgregarHorario">Agregar Horario</button>

        <table>
            <thead>
                <tr>
                    <th>Día</th>
                    <th>Inicio</th>
                    <th>Fin</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var h in horariosDisponibles)
                {
                    <tr>
                        <td>@h.Dia</td>
                        <td>@h.Inicio.ToString(@"hh\:mm")</td>
                        <td>@h.Fin.ToString(@"hh\:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


