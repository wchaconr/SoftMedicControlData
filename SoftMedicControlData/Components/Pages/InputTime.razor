@using Microsoft.AspNetCore.Components.Forms

<InputText @bind-Value="ValueString" type="time" class="input-time" @attributes="AdditionalAttributes" />

@code {
    [Parameter] public TimeSpan Value { get; set; }
    [Parameter] public EventCallback<TimeSpan> ValueChanged { get; set; }
    [Parameter(CaptureUnmatchedValues = true)] public Dictionary<string, object> AdditionalAttributes { get; set; }

    private string ValueString
    {
        get => Value.ToString(@"hh\:mm");
        set
        {
            if (TimeSpan.TryParse(value, out var result))
            {
                Value = result;
                ValueChanged.InvokeAsync(result);
            }
        }
    }
}
