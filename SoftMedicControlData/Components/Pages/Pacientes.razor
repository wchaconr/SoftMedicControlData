@page "/pacientes"

@attribute [StreamRendering]
@rendermode InteractiveServer

@inject PacienteService pacienteService
@using SoftMedicControlData.Services

<PageTitle>SoftMedic - Inicio</PageTitle>

<style>
    :root {
        --azul-suave: #6C8EBF;
        --verde-agua: #7FCDCD;
        --gris-claro: #F0F4F8;
    }

    .form-container {
        background-color: white;
        max-width: 600px;
        margin: 40px auto;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-container h2 {
        color: var(--azul-suave);
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        display: block;
        margin-bottom: 8px;
        font-weight: bold;
    }

    .form-group input,
    .form-group select,
    .form-group textarea {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 8px;
        box-sizing: border-box;
        transition: border-color 0.3s;
    }

    .form-group input:focus,
    .form-group textarea:focus,
    .form-group select:focus {
        border-color: var(--verde-agua);
        outline: none;
    }

    .btn {
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-weight: bold;
        transition: background-color 0.3s;
    }

    .table-container {
        max-width: 90%;
        margin: 40px auto;
        background-color: white;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .filter-group {
        display: flex;
        gap: 20px;
        margin-bottom: 20px;
    }

    .filter-group input {
        flex: 1;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        text-align: left;
        padding: 12px;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: var(--azul-suave);
        color: white;
    }

    tr:hover {
        background-color: #f1f1f1;
    }

    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000;
    }

    .ventana-flotante {
        background: white;
        border-radius: 8px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        width: 90%;
        max-width: 600px;
        max-height: 90vh;
        overflow-y: auto;
        display: flex;
        flex-direction: column;
    }

    .ventana-header {
        background: #2c3e50;
        color: white;
        padding: 10px 15px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .ventana-controles {
        display: flex;
        gap: 10px;
    }

    .btn-ventana {
        background: transparent;
        border: none;
        color: white;
        cursor: pointer;
        padding: 3px 8px;
        border-radius: 3px;
    }

    .ventana-body {
        padding: 20px;
    }

    .ventana-footer {
        padding: 15px;
        background: #f8f9fa;
        border-top: 1px solid #eee;
        display: flex;
        justify-content: flex-end;
        gap: 10px;
    }

</style>

<div class="header">
    <img src="/images/logo-softmedic.png" alt="Logo SoftMedic" />
    <h1>SoftMedic</h1>
</div>

<div class="form-container">
    <h2>Registrar Paciente</h2>
    <EditForm Model="@paciente" OnValidSubmit="GuardarPaciente">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label>Documento:</label>
            <InputNumber class="form-control" @bind-Value="paciente.CedulaPaciente" />
        </div>

        <div class="mb-3">
            <label>Nombre:</label>
            <InputText class="form-control" @bind-Value="paciente.Nombre" />
        </div>

        <div class="mb-3">
            <label>Apellido:</label>
            <InputText class="form-control" @bind-Value="paciente.Apellido" />
        </div>

        <div class="mb-3">
            <label>Fecha Nacimiento:</label>
            <InputDate class="form-control" @bind-Value="paciente.FechaNacimiento" />
        </div>

        <div class="mb-3">
            <label>Género:</label>
            <InputSelect class="form-control" @bind-Value="paciente.Genero">
                <option disabled selected value="">-- Seleccione --</option>
                <option value="Masculino">Masculino</option>
                <option value="Femenino">Femenino</option>
            </InputSelect>
        </div>

        <div class="mb-3">
            <label>Dirección:</label>
            <InputText class="form-control" @bind-Value="paciente.Direccion" />
        </div>

        <div class="mb-3">
            <label>Teléfono:</label>
            <InputNumber class="form-control" @bind-Value="paciente.Telefono" />
        </div>

        <div class="mb-3">
            <label>Correo Electrónico:</label>
            <InputText class="form-control" @bind-Value="paciente.CorreoElectronico" />
        </div>

        <button class="btn btn-primary" type="submit" style="background-color: lightseagreen">
            <i class="fas fa-save"></i> Guardar
        </button>
    </EditForm>
</div>

<div class="table-container">
    <h2>Pacientes Registrados</h2>

    <div class="filter-group">
        <InputText placeholder="Buscar por nombre" @bind-Value="filtroNombre" />
        <InputNumber placeholder="Buscar por documento" @bind-Value="filtroDocumento" />
    </div>

    <table>
        <thead>
            <tr>
                <th>Documento</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Genero</th>
                <th>Fecha de nacimiento</th>
                <th>Dirección</th>
                <th>Teléfono</th>
                <th>CorreoElectronico</th>
                <th>Editar</th>
                <th>Borrar</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var p in Listapacientes.Where(p =>
                        (string.IsNullOrWhiteSpace(filtroNombre) || p.Nombre.Contains(filtroNombre, StringComparison.OrdinalIgnoreCase)) &&
                        (string.IsNullOrWhiteSpace(filtroDocumento) || p.CedulaPaciente.Equals(filtroDocumento))))
            {
                <tr>
                    <td>@p.CedulaPaciente</td>
                    <td>@p.Nombre</td>
                    <td>@p.Apellido</td>
                    <td>@p.Genero</td>
                    <td>@p.FechaNacimiento</td>
                    <td>@p.Direccion</td>
                    <td>@p.Telefono</td>
                    <td>@p.CorreoElectronico</td>
                    <td>
                        <button class="btn btn-sm btn-primary" @onclick="() => AbrirVentanaFlotante(p)" style="background-color: lightseagreen">
                            <i class="fa fa-edit"></i>
                        </button>
                    </td>
                    
                    <td>
                        <button class="btn btn-sm btn-primary" @onclick="() => EliminarPaciente(p)" style="background-color: lightcoral">
                            <i class="fa fa-trash"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (ventanaVisible && @pacienteEditando != null)
    {
        <div class="modal-overlay">

            <div class="ventana-flotante">
                <div class="ventana-header">
                    <span>Editando paciente: @pacienteEditando.Nombre @pacienteEditando.Apellido </span>
                    <div class="ventana-controles">
                        <button @onclick="() => Minimizar()" class="btn-ventana">
                            <i class="fas fa-window-minimize"></i>
                        </button>
                        <button @onclick="() => CerrarVentana()" class="btn-ventana">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>

                @if (!ventanaMinimizada)
                {
                    <div class="ventana-body">
                        <EditForm Model="@pacienteEditando">

                            <div class="form-group">
                                <label>Documento:</label>
                                <InputNumber class="form-control" @bind-Value="pacienteEditando.CedulaPaciente" disabled />
                            </div>

                            <div class="form-group">
                                <label>Nombre:</label>
                                <InputText class="form-control" @bind-Value="pacienteEditando.Nombre" />
                            </div>

                            <div class="form-group">
                                <label>Apellido:</label>
                                <InputText class="form-control" @bind-Value="pacienteEditando.Apellido" />
                            </div>

                            <div class="form-group">
                                <label>Fecha Nacimiento:</label>
                                <InputDate class="form-control" @bind-Value="pacienteEditando.FechaNacimiento" />
                            </div>

                            <div class="form-group">
                                <label>Género:</label>
                                <InputSelect class="form-control" @bind-Value="pacienteEditando.Genero">
                                    <option disabled selected value="">-- Seleccione --</option>
                                    <option value="Masculino">Masculino</option>
                                    <option value="Femenino">Femenino</option>
                                </InputSelect>
                            </div>

                            <div class="form-group">
                                <label>Dirección:</label>
                                <InputText class="form-control" @bind-Value="pacienteEditando.Direccion" />
                            </div>

                            <div class="form-group">
                                <label>Teléfono:</label>
                                <InputNumber class="form-control" @bind-Value="pacienteEditando.Telefono" />
                            </div>

                            <div class="form-group">
                                <label>Correo Electrónico:</label>
                                <InputText class="form-control" @bind-Value="pacienteEditando.CorreoElectronico" />
                            </div>

                            <div class="ventana-footer">
                                <button @onclick="() => GuardarCambios()" class="btn btn-success" style="background-color: lightseagreen">
                                    <i class="fas fa-save"></i> Guardar
                                </button>

                                <button @onclick="() => CerrarVentana()" class="btn btn-secondary" style="background-color: lightcoral">
                                    <i class="fa-solid fa-xmark"></i> Cancelar
                                </button>
                            </div>
                        </EditForm>
                    </div>
                }
            </div>
        </div>
    }


</div>


