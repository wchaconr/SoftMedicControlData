@page "/pacientes"

@attribute [StreamRendering]
@rendermode InteractiveServer

<PageTitle>SoftMedic - Inicio</PageTitle>

<style>
    :root {
        --azul-suave: #6C8EBF;
        --verde-agua: #7FCDCD;
        --gris-claro: #F0F4F8;
    }

    .form-container {
        background-color: white;
        max-width: 600px;
        margin: 40px auto;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-container h2 {
        color: var(--azul-suave);
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        display: block;
        margin-bottom: 8px;
        font-weight: bold;
    }

    .form-group input,
    .form-group select,
    .form-group textarea {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 8px;
        box-sizing: border-box;
        transition: border-color 0.3s;
    }

    .form-group input:focus,
    .form-group textarea:focus,
    .form-group select:focus {
        border-color: var(--verde-agua);
        outline: none;
    }

    .btn {
        background-color: var(--verde-agua);
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-weight: bold;
        transition: background-color 0.3s;
    }

    .btn:hover {
        background-color: #5bb1b1;
    }

    .table-container {
        max-width: 90%;
        margin: 40px auto;
        background-color: white;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .filter-group {
        display: flex;
        gap: 20px;
        margin-bottom: 20px;
    }

    .filter-group input {
        flex: 1;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        text-align: left;
        padding: 12px;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: var(--azul-suave);
        color: white;
    }

    tr:hover {
        background-color: #f1f1f1;
    }
</style>

<div class="header">
    <img src="/images/logo-softmedic.png" alt="Logo SoftMedic" />
    <h1>SoftMedic</h1>
</div>

<div class="form-container">
    <h2>Registrar Paciente</h2>
    <EditForm Model="paciente" OnValidSubmit="GuardarPaciente">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="nombre">Nombre Completo</label>
            <InputText id="nombre" class="form-control" @bind-Value="paciente.Nombre" />
        </div>

        <div class="form-group">
            <label for="documento">Documento</label>
            <InputText id="documento" class="form-control" @bind-Value="paciente.Documento" />
        </div>

        <div class="form-group">
            <label for="telefono">Teléfono</label>
            <InputText id="telefono" class="form-control" @bind-Value="paciente.Telefono" />
        </div>

        <div class="form-group">
            <label for="eps">EPS</label>
            <InputText id="eps" class="form-control" @bind-Value="paciente.EPS" />
        </div>

        <button type="submit" class="btn">Guardar</button>
    </EditForm>
</div>

<div class="table-container">
    <h2>Pacientes Registrados</h2>

    <div class="filter-group">
        <InputText placeholder="Buscar por nombre" @bind-Value="filtroNombre" />
        <InputText placeholder="Buscar por documento" @bind-Value="filtroDocumento" />
    </div>

    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Documento</th>
                <th>Teléfono</th>
                <th>EPS</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in listaPacientes.Where(p =>
                        (string.IsNullOrWhiteSpace(filtroNombre) || p.Nombre.Contains(filtroNombre, StringComparison.OrdinalIgnoreCase)) &&
                        (string.IsNullOrWhiteSpace(filtroDocumento) || p.Documento.Contains(filtroDocumento, StringComparison.OrdinalIgnoreCase))))
            {
                <tr>
                    <td>@p.Nombre</td>
                    <td>@p.Documento</td>
                    <td>@p.Telefono</td>
                    <td>@p.EPS</td>
                </tr>
            }
        </tbody>
    </table>
</div>



